<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cindy.madlibs" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MadLibsMainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FillWordsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_fill_words" >
        </activity>
        <activity
            android:name=".StoryActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_story" >
        </activity>
        <activity
            android:name=".ChooseStoryActivity"
            android:label="@string/title_activity_choose_story" >
        </activity>
    </application>

</manifest>
